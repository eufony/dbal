{
  "name": "eufony/orm",
  "description": "Model-based zero-configuration extensible PHP ORM library.",
  "keywords": [ "eufony", "orm", "dbal", "sql" ],
  "type": "library",
  "license": "LGPL-3.0-or-later",
  "authors": [
    {
      "name": "Alpin Gencer",
      "email": "alpingencer@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^8.0",
    "ext-pdo": "*",
    "eufony/cache": "^1.0@dev",
    "eufony/inflector-doctrine-wrapper": "^1.0",
    "psr/log": "^1.0 || ^2.0 || ^3.0",
    "psr/simple-cache": "^1.0"
  },
  "require-dev": {
    "fakerphp/faker": "^1.16",
    "mockery/mockery": "^1.4",
    "phpunit/phpunit": "^9.5"
  },
  "suggest": {
    "eufony/inflector-implementation": "Virtual package for inflection implementations.",
    "monolog/monolog": "Well-maintained and popular logging library.",
    "psr/cache-implementation": "Virtual package for PSR-6 caching implementations.",
    "psr/log-implementation": "Virtual package for PSR-3 logging implementations.",
    "psr/simple-cache-implementation": "Virutal package for PSR-16 caching implementations."
  },
  "provide": {
    "psr/log-implementation": "^1.0 || ^2.0 || ^3.0"
  },
  "autoload": {
    "psr-4": {
      "Eufony\\ORM\\": [ "src/Exception/", "src/" ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\": [ "tests/App/" ],
      "Eufony\\ORM\\Tests\\": [ "tests/" ]
    }
  },
  "scripts": {
    "test": [
      "phpunit -c tests/Unit/phpunit.xml.dist",
      "phpunit -c tests/Integration/phpunit.xml.dist"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  }
}
